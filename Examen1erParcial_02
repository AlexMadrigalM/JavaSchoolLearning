import javax.swing.JOptionPane;

public class Examen1erParcial_02 { public static void main(String[] args) {

    String Semana = JOptionPane.showInputDialog("Inserte un número del 1 al 7");
    int Sema = Integer.parseInt(Semana);

    switch (Sema) {
        case 1:
            JOptionPane.showMessageDialog(null, "El día 1 es el lunes");
            break;
        case 2:
            JOptionPane.showMessageDialog(null, "El día 2 es el martes");
            break;
        case 3:
            JOptionPane.showMessageDialog(null, "El día 3 es el miercoles");
            break;
        case 4:
            JOptionPane.showMessageDialog(null, "El día 4 es el jueves");
            break;
        case 5:
            JOptionPane.showMessageDialog(null, "El día 5 es el viernes");
            break;
        case 6:
            JOptionPane.showMessageDialog(null, "El día 6 es el sabado");
            break;
        case 7:
            JOptionPane.showMessageDialog(null, "El día 7 es el domingo");
            break;
        default:
            JOptionPane.showMessageDialog(null, "Elige un número del 1 al 7");
            break;

    }
}

}
