package org.example;

import javax.swing.JOptionPane;

public class Main {
    public static void main(String[] args) {

        String a = JOptionPane.showInputDialog("Ingrese la base: ");
        String b = JOptionPane.showInputDialog("Ingrese la altura: ");
        float base = Float.parseFloat(a);
        float altura = Float.parseFloat(b);
        float area = base*altura/2;
        JOptionPane.showMessageDialog(null, "El resultado del area es: " + area);

    }
}
